<div class="container">
    <div class="row">
        <div class="col-sm-6 toEat">
            <h3>Burgers to eat</h3>
            <hr>
            <ul class="collection">
                {{#each burgers}}
                {{#unless devoured}}
                {{this.id}}. {{this.burgerName}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6 eaten">
            <h3>Burgers eaten</h3>
            <hr>
            <ul class="collection">
                {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>